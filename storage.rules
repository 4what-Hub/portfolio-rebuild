rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check file size (max 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // Helper function to check if file is an image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // Projects images - public read, authenticated write
    match /projects/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }

    // Gallery images - public read, authenticated write
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }

    // About images - public read, authenticated write
    match /about/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }

    // General uploads - public read, authenticated write
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && isImage() && isValidSize();
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
