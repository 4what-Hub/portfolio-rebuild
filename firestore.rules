rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin (you can customize this)
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.email != null &&
             request.auth.token.email.matches('.*@(gmail\\.com)$');
    }

    // Projects collection - public read, admin write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery collection - public read, admin write
    match /gallery/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site configuration - public read, admin write
    match /site_config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // About content - public read, admin write
    match /about/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact submissions - anyone can create, only admin can read/update/delete
    match /contact_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Newsletter subscribers - anyone can create (subscribe), admin can manage
    match /newsletter_subscribers/{subscriberId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
